FROM gatekeeper/baseimage:latest as build-env

# FROM golang:latest as build-env
# RUN mkdir /build

ADD . /build/
WORKDIR /build
# static build is required
ENV CGO_ENABLED=0
RUN make envoyauth

FROM alpine
WORKDIR /app/
COPY --from=build-env /build/bin/envoyauth .
USER nobody
CMD ["/app/envoyauth"]
